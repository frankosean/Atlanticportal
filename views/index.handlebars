{{!  Modal for entering lane (on the right)}}
<div class="modal fade" id="myModalNorm" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            {{! Modal Header}}
            <div class="modal-header">
                <button type="button" class="close" 
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Enter Lane
                </h4>
            </div>
            
            {{!  Modal Body }}
            <div class="modal-body">
                <form role="form">
                  <div class="form-group">
                    
                    <label for="exampleInputEmail1">Lane </label>
                      <input name="truckloads" type="text" class="form-control"
                      id="exampleInputEmail1" placeholder="City, ST"/>
                  
                  </div>
                  <div class="form-group">
                    
                    <label for="exampleInputPassword1">PICKUP DATE</label>
                      <input name="pickupdate" type="text" class="form-control"
                          id="exampleInputPassword1" placeholder="(MM/DD)"/>
                  
                  </div>
                  <div class="form-group">
                    
                    <label for="exampleInputPassword1">PICKUP NUMBER</label>
                      <input name="pickupnumber" type="text" class="form-control"
                          id="pickUpNumber" placeholder="PICKUP #"/>
                  </div>
                  <div class="form-group">
                    
                    <label for="exampleInputPassword1">PO #</label>
                      <input name="pickupnumber" type="text" class="form-control"
                          id="poNumber" placeholder="PO #"/>
                  </div>
                  <div class="form-group">
                    
                    <label for="exampleInputPassword1">Addition Info</label>
                      <input name="" type="text" class="form-control"
                          id="additional_info" placeholder="(ex. drop off info)"/>
                  </div>
                </form>
            </div>   
            {{!  Modal Footer }}
            <div class="modal-footer">
                <button id="sub" type="button" class="btn btn-primary">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>

